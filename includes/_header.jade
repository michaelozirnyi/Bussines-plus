mixin header(pageName)
    header.header
        div.container.flexes.flex-wrap
            a.col-lg-2.col-md-3.col-sm-4.col-xs-4(href="#")
                img.logo( src="images/logo.png" alt="BusinessPlus")
            div.phone.col-lg-2.col-md-3.col-sm-3.col-xs-6
                a.text-color-white( href="tel:+9978 8856 999")
                    img( src="images/phone-icon.png" alt="phone")
                    | +9978 8856 999

            nav.navbar.navbar-toggleable-md.navbar-light.main-nav.upper.flexes.col-lg-8.col-md-12.col-sm-12
                button.navbar-toggler( type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div#navbarTogglerDemo01.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                        li
                            if pageName == 'home'
                                a(href="index-home-page.html" class="nav text-color-white active") Home
                            else
                                a(href="index-home-page.html" class="nav text-color-white") Home
                        li
                            if pageName == 'about us'
                                a(href="index-about-us.html" class="nav text-color-white active") About us
                            else
                                a(href="index-about-us.html" class="nav text-color-white") About us
                        li
                            if pageName == 'services'
                                a(href="index-services.html" class="nav text-color-white active") services
                            else
                                a(href="index-services.html" class="nav text-color-white") services
                        li
                            if pageName == 'news'
                                a(href="index-news.html" class="nav text-color-white active") news
                            else
                                a(href="index-news.html" class="nav text-color-white") news
                        li
                            if pageName == 'blog'
                                a(href="index-blog.html" class="nav text-color-white active") blog
                            else
                                a(href="index-blog.html" class="nav text-color-white") blog
                        li
                            if pageName == 'pages'
                                a(href="index-faq.html" class="nav text-color-white active") pages
                            else
                                a(href="index-faq.html" class="nav text-color-white") pages
                        li
                            if pageName == 'contact us'
                                a(href="index-contact-us.html" class="nav text-color-white active") Contact Us
                            else
                                a(href="index-contact-us.html" class="nav text-color-white") Contact Us